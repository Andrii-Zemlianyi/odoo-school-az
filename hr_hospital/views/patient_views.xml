<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="patient_view_tree" model="ir.ui.view">
        <field name="name">patient.view.tree</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">patient</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <label for="name" class="oe_inline"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <label for="age" class="oe_inline"/>
                    <h3>
                        <field name="age"/>
                    </h3>
                    <separator string="Description"/>
                    <field name="description" class="oe-bordered-editor" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create Patient</p>
        </field>
    </record>
    <menuitem name="Patient" id="patient_hospital_tree" parent="hr_hospital_hospital" action="patient_action" sequence="10" />
</odoo>

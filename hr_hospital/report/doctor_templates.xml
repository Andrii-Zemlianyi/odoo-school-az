<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="hospital">
        <div>
            <div class="col-6">
                <img t-att-src="image_data_uri(user.company_id.logo)"
                     alt="Logo"/>
            </div>
            <div class="col-12">
                <span t-esc="user.company_id.name"/>
            </div>
        </div>
    </template>
    <template id="print_date_time">
        <div name="print_datetime" style="text-align:right;">
            <strong>
                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
            </strong>
        </div>
    </template>
    <template id="report_doctor_card" name="report.doctor.card">
        <t t-call="web.external_layout">
            <t t-call="hr_hospital.hospital"/>
            <br/>
            <t t-call="hr_hospital.print_date_time"/>
          </t>
    </template>
    <template id="report_doctor">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="hr_hospital.report_doctor_card"/>
            </t>
        </t>
    </template>
</odoo>

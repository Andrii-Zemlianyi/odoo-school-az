<odoo>
    <record model="ir.ui.view" id="diagnosis_tree_view">
        <field name="name">Diagnosis Tree</field>
        <field name="model">diagnosis</field>
        <field name="arch" type="xml">
            <tree string="Diagnosis">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="diagnosis_form_view">
        <field name="name">Diagnosis Form</field>
        <field name="model">diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnosis">
                <sheet>
                    <label for="name" class="oe_inline"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <separator string="Description"/>
                    <field name="description" class="oe-bordered-editor" />
                </sheet>
            </form>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="diagnosis_action_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">diagnosis</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="diagnosis_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create Diagnosis
            </p>
        </field>
    </record>
    <menuitem name="Diagnosis" id="diagnosis_hospital_tree" parent="hr_hospital_hospital" action="diagnosis_action_window" sequence="40" />
</odoo>
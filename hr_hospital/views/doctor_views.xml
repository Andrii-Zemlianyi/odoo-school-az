<odoo>
    <record model="ir.ui.view" id="doctor_tree_view">
        <field name="name">Doctor Tree</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="doctor_form_view">
        <field name="name">Doctor Form</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <label for="name" class="oe_inline"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <label for="specialty" class="oe_inline"/>
                    <h3>
                        <field name="specialty"/>
                    </h3>
                    <separator string="Description"/>
                    <field name="description" class="oe-bordered-editor" />
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="doctor_action_window">
        <field name="name">Doctor</field>
        <field name="res_model">doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="doctor_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create Doctor</p>
        </field>
    </record>
    <menuitem name="Doctor" id="doctor_hospital_tree" parent="hr_hospital_hospital" action="doctor_action_window" sequence="20" />
</odoo>
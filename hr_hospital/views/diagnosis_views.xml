<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="diagnosis_view_tree" model="ir.ui.view">
        <field name="name">view_diagnosis_form_tree</field>
        <field name="model">diagnosis</field>
        <field name="arch" type="xml">
            <tree string="Diagnosis">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="diagnosis_view_form" model="ir.ui.view">
        <field name="name">view_diagnosis_form</field>
        <field name="model">diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnosis">
                <sheet>
                    <label for="name" class="oe_inline"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <separator string="Prescribed treatment"/>
                    <field name="prescribed_treatment" class="oe-bordered-editor" />
                </sheet>
            </form>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record id="diagnosis_action" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">diagnosis</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create Diagnosis
            </p>
        </field>
    </record>
    <menuitem name="Diagnosis" id="diagnosis_hospital_tree" parent="hr_hospital_registry" action="diagnosis_action" sequence="40" />
</odoo>
